<div class="wrapper">
  <div class="container">
    <h2>Become a News publisher</h2>
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="field">

            <%= f.input :username, :label => "Username", required: true  %>

            <%= f.input :email, :label => "E-mail", required: true, autofocus: true %>

            <%= f.input :password, :label => "Password", required: true, hint: ("At least #{@minimum_password_length} caracteres" if @minimum_password_length) %>

            <%= f.input :password_confirmation, :label => "Password confirmation", required: true %>

          </div>
          <div class="col-sm-offset-4 col-sm-6">
            <%= f.button :submit, "Count me in", class: 'btn-warning' %>
       <!-- <%= render "devise/shared/links" %> -->
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>



